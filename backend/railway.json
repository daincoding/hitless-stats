{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "NIXPACKS"
    },
    "deploy": {
      "runtime": "V2",
      "numReplicas": 1,
      "startCommand": "npx prisma migrate deploy --schema=prisma/schema.prisma && node server.js",
      "sleepApplication": false,
      "multiRegionConfig": {
        "us-west2": {
          "numReplicas": 1
        }
      },
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 2
    }
  }